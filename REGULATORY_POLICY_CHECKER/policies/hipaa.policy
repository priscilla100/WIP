@["§164.502(a)(1)(i) - General rule: Permitted uses and disclosures"]
forall ce, recipient, phi, purpose.
  coveredEntity(ce)
  and protectedHealthInfo(phi)
  and disclose(ce, recipient, phi, purpose)
  implies
  (permittedUseOrDisclosure(ce, recipient, phi, purpose)
   or hasAuthorization(ce, recipient, phi)
   or requiredByLaw(purpose))
;

@["§164.502(a)(1)(ii) - Minimum necessary applies"]
forall ce, recipient, phi, purpose.
  coveredEntity(ce)
  and protectedHealthInfo(phi)
  and disclose(ce, recipient, phi, purpose)
  and not (purposeIsPurpose(purpose, @Treatment) 
           or purposeIsPurpose(purpose, @PaymentToProvider)
           or isDisclosureToPatient(recipient, phi))
  implies
  minimumNecessary(ce, recipient, phi, purpose)
;

@["§164.506(a) - Consent for TPO not required but permitted"]
forall ce, patient, phi, purpose.
  coveredEntity(ce)
  and protectedHealthInfo(phi)
