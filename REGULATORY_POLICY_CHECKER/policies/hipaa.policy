  and (purposeIsPurpose(purpose, @Treatment) 
       or purposeIsPurpose(purpose, @Payment)
       or purposeIsPurpose(purpose, @HealthcareOperations))
  implies
  permittedUseOrDisclosure(ce, patient, phi, purpose)
;

@["§164.508(a)(1) - Authorization required for non-TPO"]
