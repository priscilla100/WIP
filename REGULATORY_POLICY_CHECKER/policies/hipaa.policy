  and not (purposeIsPurpose(purpose, @Treatment) 
           or purposeIsPurpose(purpose, @Payment)
           or purposeIsPurpose(purpose, @HealthcareOperations))
  and not requiredByLaw(purpose)
  implies
  hasAuthorization(ce, recipient, phi)
;

